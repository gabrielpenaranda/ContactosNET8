@model ContactosNET8.Models.Contacto
@{
    ViewData["Title"] = "Editar Contacto";
}

<div class="row">
    <div class="offset-12">
        <div class="card border">D
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Detalle Contacto</strong></h3>
            </div>
            
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Nombre: </strong>@Html.DisplayFor(m => m.Nombre)</li>
                    <li class="list-group-item"><strong>Teléfono: </strong>@Html.DisplayFor(m => m.Telefono)</li>
                    <li class="list-group-item"><strong>Celular: </strong>@Html.DisplayFor(m => m.Celular)</li>
                    <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(m => m.Email)</li>
                    <li class="list-group-item"><strong>Fecha de Creación: </strong>@Html.DisplayFor(m => m.FechaCreacion)</li>
                    <li class="list-group-item"><strong>Fecha de Actualización: </strong>@Html.DisplayFor(m => m.FechaActualizacion)</li>
                </ul>
                <a asp-controller="Inicio" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>  
</div>